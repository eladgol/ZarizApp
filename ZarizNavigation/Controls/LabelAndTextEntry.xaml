<?xml version="1.0" encoding="utf-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HorizontalOptions="FillAndExpand"
    x:Class="ZarizNavigation.Controls.LabelAndTextEntry">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Label x:Name="nLabel" FontAttributes="Bold" Grid.Row="0" />
    <Entry x:Name="nEntry" Grid.Row="1" Focused="OnEntryFocused" Unfocused="OnEntryUnfocused" Margin="20, 0" FlowDirection="RightToLeft"/>
</Grid>